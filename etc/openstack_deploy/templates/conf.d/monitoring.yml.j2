{% if monitoring_hosts is defined and monitoring_hosts | length > 0 %}
influx_hosts: &influx_hosts
{% for h in monitoring_hosts %}
 {{ h.name }}:
    ip: {{ h.ip_v4 }}
{% endfor %}

collectd_hosts:
{% for h in monitoring_hosts %}
{# Leave the next comments lines within the loop so that they are not duplicated #}
{% if loop.index < 2 %}
# Temporay workaround until collectd is deployed in HA cluster
# Currently only the 'first' host with monitoring role is selected
  {{ h.name }}:
    ip: {{ h.ip_v4 }}
{% endif %}
{% endfor %}

grafana_hosts: *influx_hosts
{% endif %}
