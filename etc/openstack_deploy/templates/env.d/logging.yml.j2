component_skel:
  elasticsearch:
    belongs_to:
      - logging_all
  fluentd:
    belongs_to:
      - logging_all
  kibana:
    belongs_to:
      - logging_all
container_skel:
  elastic-fluentd_container:
    belongs_to:
      - elastic-fluentd_containers
    contains:
      - elasticsearch
      - fluentd
    properties:
      container_fs_size: {{ elastic_fluentd_container_fs_size | default('8G') }}
  kibana_container:
    belongs_to:
      - kibana_containers
    contains:
      - kibana
    properties:
      container_fs_size: {{ kibana_container_fs_size | default('4G') }}
physical_skel:
  elastic-fluentd_containers:
    belongs_to:
      - all_containers
  kibana_containers:
    belongs_to:
      - all_containers
  elastic-fluentd_hosts:
    belongs_to:
      - hosts
  kibana_hosts:
    belongs_to:
      - hosts
