component_skel:
  influxdb:
    belongs_to:
      - monitoring_all
  influxdb_relay:
    belongs_to:
      - monitoring_all
  grafana:
    belongs_to:
      - monitoring_all
  kapacitor:
    belongs_to:
      - monitoring_all
  collectd:
    belongs_to:
      - monitoring_all
  sensu:
    belongs_to:
      - monitoring_all
  redis:
    belongs_to:
      - monitoring_all
container_skel:
  influx_container:
    belongs_to:
      - influx_containers
    contains:
      - influxdb
      - influxdb_relay
      - kapacitor
    properties:
      container_fs_size: {{ influx_container_fs_size | default('24G') }}
  collectd_container:
    belongs_to:
      - collectd_containers
    contains:
      - collectd
  grafana_container:
    belongs_to:
      - grafana_containers
    contains:
      - grafana
    properties:
      container_fs_size: {{ grafana_container_fs_size | default('8G') }}
  sensu_container:
    belongs_to:
      - sensu_containers
    contains:
      - sensu-server
      - sensu-api
      - uchiwa
  redis_container:
    belongs_to:
      - redis_containers
    contains:
      - redis
physical_skel:
  influx_containers:
    belongs_to:
      - all_containers
  collectd_containers:
    belongs_to:
      - all_containers
  grafana_containers:
    belongs_to:
      - all_containers
  sensu_containers:
    belongs_to:
      - all_containers
  redis_containers:
    belongs_to:
      - all_containers
  influx_hosts:
    belongs_to:
      - hosts
  collectd_hosts:
    belongs_to:
      - hosts
  grafana_hosts:
    belongs_to:
      - hosts
  sensu_hosts:
    belongs_to:
      - hosts
  redis_hosts:
    belongs_to:
      - hosts