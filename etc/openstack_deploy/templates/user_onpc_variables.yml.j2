{% if slack is defined and slack.get('alert-channel', '') | length > 0 and slack.get('uuid', '') | length > 0 %}
## Use slack for alerts
slack_alerts_enabled: True
slack_alerts_channel: "#{{ slack.get('alert-channel') }}"
# Should go in vault to avoid being spammed
slack_webhooks_url: "https://hooks.slack.com/services/{{ slack.get('uuid') }}}"
{% endif %}

onpc_environment_name: "ONPC_STARTER_KIT"

fluentd_syslog_port: 5140
# Variable used by 'rsyslog_client' role to define additional rsyslog targets
rsyslog_client_user_defined_targets:
  - name: "fluentd"
    proto: "tcp"
    template: "$ActionFileDefaultTemplate RSYSLOG_ForwardFormat"
{% raw %}
    port: "{{ fluentd_syslog_port }}"
    hostname: "{{ fluentd_host | default(internal_lb_vip_address) }}"
{% endraw %}
