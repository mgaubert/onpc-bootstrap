- name: Get controller nodes ansible facts
  hosts: all
  gather_facts: True
 
  vars_files:
    - ../vars/bootstrap-global-setup.yml
 
  tasks:
    - include_tasks: ../tasks/roles_check.yml
  

- name: Setup OpenStack-Ansible deployment host
  hosts: localhost

  vars_files:
    - ../vars/bootstrap-global-setup.yml
    - ../vars/bootstrap-network-setup.yml

  tasks:

    - include_tasks: ../tasks/bootstrap-facts.yml
    - include_tasks: ../tasks/global-checks.yml

    - name: Get OSA repository from GitHub
      git:
        repo: "https://github.com/openstack/openstack-ansible"
        dest: "/opt/openstack-ansible"
        accept_hostkey: yes
        force: no 
        recursive: no
        version: "{{ onpc_release | default('stable/rocky') }}"
      environment: "{{ proxy_env | default('{}') }}"
      tags: ['repositories']

    - name: Get OpenNext Repositories
      git:
        repo: "https://github.com/opennext-io/{{ item }}"
        dest: "/opt/{{ item }}"
        force: no
        recursive: no
      with_items:
        - "onpc-logging"
        - "onpc-monitoring"
      environment: "{{ proxy_env | default('{}') }}"
      tags: ['repositories']

    - name: Boostrap Ansible for OSA
      command: "./scripts/bootstrap-ansible.sh"
      args:
        chdir: "/opt/openstack-ansible"
        creates: "/opt/ansible-runtime/bin/ansible-playbook"
      environment: "{{ proxy_env | default({}) | combine({ 'TMPDIR': '/var/tmp' }) }}"
      register: bootstrap_ansible_result
      tags: ['bootstrap']

    - name: Create OSA directories
      file:
        path: "{{ item }}"
        state: directory
      with_items:
        - "/etc/openstack_deploy"
        - "/etc/openstack_deploy/conf.d"
        - "/etc/openstack_deploy/env.d"
      tags: ['setup']

    - name: Check existence of user_secrets.yml
      stat:
        path: "/etc/openstack_deploy/user_secrets.yml"
      register: user_secrets_info
      tags: ['setup']

    - name: Copy template for user_secrets.yml
      copy:
        src: "/opt/openstack-ansible/etc/openstack_deploy/user_secrets.yml"
        dest: "/etc/openstack_deploy/user_secrets.yml"
        remote_src: yes
      when: not user_secrets_info.stat.exists
      tags: ['setup']
    
    - name: Generate user_secrets password
      command: "/opt/ansible-runtime/bin/python /opt/openstack-ansible/scripts/pw-token-gen.py --file /etc/openstack_deploy/user_secrets.yml"
      changed_when: false
      when: not user_secrets_info.stat.exists
      tags: ['setup']

    - name: Check existence of user_onpc_secrets.yml
      stat:
        path: "/etc/openstack_deploy/user_onpc_secrets.yml"
      register: user_onpc_secrets_info
      tags: ['setup']

    - name: Copy template for user_onpc_secrets.yml
      copy:
        src: "{{ onpc_model_repo_dir }}/etc/openstack_deploy/user_onpc_secrets.yml"
        dest: "/etc/openstack_deploy/user_onpc_secrets.yml"
        remote_src: yes
      when: not user_onpc_secrets_info.stat.exists
      tags: ['setup']

    - name: Generate user_onpc_secrets passwords
      command: "/opt/ansible-runtime/bin/python /opt/openstack-ansible/scripts/pw-token-gen.py --file /etc/openstack_deploy/user_onpc_secrets.yml"
      changed_when: false
      when: not user_onpc_secrets_info.stat.exists
      tags: ['setup']

    # It seems find module has a problem with using variable in paths attribute
    - name: Get deployment model env.d templates
      find:
        paths: "/opt/onpc-basic-model/etc/openstack_deploy/templates/env.d"
        patterns: '^.*\.j2$'
        use_regex: yes
      register: onpc_model_envd_templates

    - name: Generate env.d config files from templates 
      template:
        src: "{{ item }}"
        dest: "{{ out_file }}"
        backup: yes
        group: root
        mode: 0644
      vars:
        out_file: "/etc/openstack_deploy/env.d/{{ (item | basename).split('.')[:-1] | join('.') }}"
      with_items: "{{ onpc_model_envd_templates.get('files', []) | map(attribute='path') | list }}"

    - name: Get deployment model conf.d templates
      find:
        paths: "/opt/onpc-basic-model/etc/openstack_deploy/templates/conf.d"
        patterns: '^.*\.j2$'
        use_regex: yes
      register: onpc_model_confd_templates

    - name: Generate conf.d config files from templates 
      template:
        src: "{{ item }}"
        dest: "{{ out_file }}"
        backup: yes
        group: root
        mode: 0644
      vars:
        out_file: "/etc/openstack_deploy/conf.d/{{ (item | basename).split('.')[:-1] | join('.') }}"
      with_items: "{{ onpc_model_confd_templates.get('files', []) | map(attribute='path') | list }}"

    - name: Generate openstack_user_config.yml file from template 
      template:
        src: "{{ onpc_model_repo_dir }}/etc/openstack_deploy/templates/openstack_user_config.yml.j2"
        dest: "/etc/openstack_deploy/openstack_user_config.yml"
        backup: yes
        group: root
        mode: 0644

    - name: Generate user_variables.yml file from template 
      template:
        src: "{{ onpc_model_repo_dir }}/etc/openstack_deploy/templates/user_variables.yml.j2"
        dest: "/etc/openstack_deploy/user_variables.yml"
        backup: yes
        group: root
        mode: 0644